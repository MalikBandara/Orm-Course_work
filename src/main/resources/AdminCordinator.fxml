<AnchorPane fx:id="anchorpane" prefHeight="1000.0" prefWidth="1900.0" stylesheets="@css/cordinatordash.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.AdminCordinatorController">

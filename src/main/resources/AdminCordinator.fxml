                        <Color red="0.6391000151634216" green="0.7699999809265137" blue="0.7024655938148499" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill></Label>
      <Button fx:id="addbtn" layoutX="485.0" layoutY="864.0" mnemonicParsing="false" onAction="#addstudentbtn" prefHeight="65.0" prefWidth="216.0" stylesheets="@css/cordinatordash.css" text="Add Students ">
